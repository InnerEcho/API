# ================================
# 환경 설정
# ================================
NODE_ENV=development

# ================================
# 서버 설정
# ================================
PORT=3000

# ================================
# 데이터베이스 설정 (MySQL)
# ================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_db_password
DB_NAME=leafy_db

# ================================
# JWT 인증 설정 (V1 - 기존 호환)
# ================================
# 기존 단일 JWT 키 (호환성을 위해 유지)
JWT_AUTH_KEY=your-super-secret-jwt-key-change-this-in-production

# ================================
# JWT 인증 설정 (V2 - 권장)
# ================================
# Access Token 시크릿 키 (짧은 유효기간용)
JWT_ACCESS_SECRET=your-access-token-secret-key-change-this

# Refresh Token 시크릿 키 (긴 유효기간용)
JWT_REFRESH_SECRET=your-refresh-token-secret-key-change-this

# Access Token 만료 시간 (예: 15m, 1h, 1d)
JWT_ACCESS_EXPIRY=15m

# Refresh Token 만료 시간 (예: 7d, 30d)
JWT_REFRESH_EXPIRY=7d

# ================================
# 이메일 인증 설정 (Nodemailer)
# ================================
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# ================================
# OpenAI API 설정 (AI 채팅 기능)
# ================================
OPENAI_API_KEY=your-openai-api-key

# ================================
# Google Cloud 설정 (Speech API)
# ================================
GOOGLE_APPLICATION_CREDENTIALS=./path-to-your-service-account-key.json

# ================================
# Rate Limiting 설정 (선택사항)
# ================================
# 로그인 시도 제한 (분)
RATE_LIMIT_LOGIN_WINDOW=5
# 로그인 시도 최대 횟수
RATE_LIMIT_LOGIN_MAX=5

# 일반 API 제한 (분)
RATE_LIMIT_API_WINDOW=1
# 일반 API 최대 횟수
RATE_LIMIT_API_MAX=100

# ================================
# CORS 설정
# ================================
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# ================================
# 보안 설정
# ================================
# 쿠키 시크릿 키
COOKIE_SECRET=your-cookie-secret-key

# ================================
# 기타 설정
# ================================
# 로그 레벨 (error, warn, info, debug)
LOG_LEVEL=info
